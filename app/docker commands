
# APP
docker build -t app_image -f deploy/Dockerfile .
docker run --hostname test --name app_container -d -p 8000:8000 app_image
docker logs app_container

# STATISTICS
docker build -t statistics_image -f deploy/Dockerfile.dev .
docker run --name statistics_container -p 8000:8000 statistics_image

# REMOVE 
docker kill $(docker ps -q)
docker rm -f $(docker ps -a -q)
yes | docker image prune -a









docker build -t image_name .

ports (externa:interna)
a externa é que muda o link
a interna é a defalut para o uma determinada tecnologia (p.e django é 8080 logo no run ponho externa:8080)

docker stop container_id
docker rm container_id

